# Example environment variables for pulpo server
# Copy this file to .env and fill with real values

# SSH public key for the 'core' user
# Generate with: ssh-keygen -t ed25519
SSH_PUBKEY='ssh-ed25519 AA................................................................Uu john.doe'

# Password hash for the 'core' user
# Generate with: mkpasswd --method yescrypt
# Example password: mypassword (CHANGE THIS!)
PASSWORD_HASH='$y$j9T$8afWVraCBb0U/yH2Gq57C/$sJNvTWwiwvi0p4FADRvaP/8ehFYCRNQ/rBZFsRyfX63'

# IPv4 network configuration
IPV4_ADDRESS=192.168.123.123/24
IPV4_GATEWAY=192.168.123.254
IPV4_DNS=9.9.9.9

# Syncthing web UI access control
# 0.0.0.0:8384 is default, listens on all host network interfaces
# 127.0.0.1:8384 listens only within localhost
SYNCTHING_GUI_ADDRESS=0.0.0.0:8384

